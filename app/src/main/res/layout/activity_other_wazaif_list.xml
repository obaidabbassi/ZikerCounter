<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen"
    android:gravity="center"
    android:orientation="vertical"

    tools:context="com.example.zikercounter.Weekly_wazaif">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/ad_id_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wazaifcardother"
        app:layout_constraintVertical_bias="0.982" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18sp"

                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="@string/wealth_h1"

                        android:textColor="@color/yellow"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"

                        android:textStyle="bold"
                        android:text="@string/wealth_h2"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/wealth_h3"                        android:layout_marginStart="20dp"
                        android:paddingBottom="15dp"

                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/wealth_h4"                        android:layout_marginStart="20dp"
                        android:paddingBottom="15dp"

                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"/>



                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:id="@+id/tvheading"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="@string/debt_h1"

                        android:textColor="@color/yellow"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/tvsubheading"
                        android:textStyle="bold"
                        android:text="@string/debt_h2"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tvmain"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:paddingBottom="15dp"
                        android:text="@string/debt_h3"

                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>



            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18sp"

                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="@string/need_h1"

                        android:textColor="@color/yellow"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"

                        android:textStyle="bold"
                        android:text="@string/need_h2"                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/need_h3"                        android:layout_marginStart="20dp"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/need_h4"                        android:layout_marginStart="20dp"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"/>





                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18sp"

                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="@string/memory_h1"

                        android:textColor="@color/yellow"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"

                        android:textStyle="bold"
                        android:text="@string/memory_h2"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/memory_h3"                        android:layout_marginStart="20dp"
                        android:paddingBottom="15dp"

                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/memory_h4"                        android:layout_marginStart="20dp"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"/>




                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18sp"

                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="@string/patient_h1"

                        android:textColor="@color/yellow"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"

                        android:textStyle="bold"
                        android:text="@string/patient_h2"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/patient_h3"                        android:layout_marginStart="20dp"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/patient_h4"                        android:layout_marginStart="20dp"
                        android:paddingBottom="15dp"
                            android:textAlignment="center"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"/>





                </LinearLayout>



            </androidx.cardview.widget.CardView>






        </LinearLayout>







    </ScrollView>







</LinearLayout>